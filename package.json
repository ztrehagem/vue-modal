{
  "name": "@ztrehagem/vue-modal",
  "version": "0.4.2",
  "description": "A simple modal component of Vue.js",
  "keywords": [
    "modal",
    "component",
    "vue"
  ],
  "author": {
    "email": "shigeki.suwa@ztrehagem.dev",
    "name": "Shigeki Suwa",
    "url": "https://ztrehagem.dev/"
  },
  "license": "MIT",
  "homepage": "https://github.com/ztrehagem/vue-modal",
  "bugs": "https://github.com/ztrehagem/vue-modal/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ztrehagem/vue-modal.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.9.0"
  },
  "main": "dist/vue-modal.common.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "run-s build:*",
    "build:lib": "vue-cli-service build --target lib --name vue-modal ./src/lib/index.ts",
    "build:types": "tsc --declaration --emitDeclarationOnly --jsx preserve --outDir dist ./src/lib/index.ts || true",
    "lint": "vue-cli-service lint",
    "prepare": "run-s build"
  },
  "dependencies": {},
  "peerDependencies": {
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-plugin-typescript": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/eslint-config-typescript": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "core-js": "^2.6.5",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.4",
    "pug-plain-loader": "^1.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "typescript": "^3.4.3",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
