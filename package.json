{
  "name": "@ztrehagem/vue-modal",
  "version": "1.0.0-beta.0",
  "description": "Stack-managed styleless modal library for Vue.js.",
  "author": {
    "email": "shigeki.suwa@ztrehagem.dev",
    "name": "Shigeki Suwa",
    "url": "https://ztrehagem.dev/"
  },
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "run-s build:*",
    "build:lib": "vue-cli-service build --target=lib --name=vue-modal ./src/lib/main.ts",
    "build:dts": "tsc -p tsconfig.build.json",
    "gh-pages": "vue-cli-service build --dest=gh-pages && touch gh-pages/.nojekyll",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ignore-path=.gitignore .",
    "lint:prettier": "prettier --ignore-path=.gitignore --check .",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint --ignore-path=.gitignore --fix .",
    "fix:prettier": "prettier --ignore-path=.gitignore --check --write .",
    "prepare": "run-s build"
  },
  "main": "dist/vue-modal.common.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-typescript": "^4.5.15",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "core-js": "^3.6.5",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "sass": "^1.43.4",
    "sass-loader": "^10.2.0",
    "typescript": "~4.5.2",
    "vue": "2.6.0",
    "vue-template-compiler": "2.6.0"
  },
  "peerDependencies": {
    "vue": "^2.6.0"
  },
  "bugs": "https://github.com/ztrehagem/vue-modal/issues",
  "homepage": "https://github.com/ztrehagem/vue-modal",
  "keywords": [
    "modal",
    "vue"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ztrehagem/vue-modal.git"
  },
  "typings": "dist/main.d.ts"
}
