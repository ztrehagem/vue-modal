{
  "name": "@ztrehagem/vue-modal",
  "version": "1.0.0-beta.1",
  "description": "Stack-managed styleless modal library for Vue.js.",
  "author": {
    "email": "shigeki.suwa@ztrehagem.dev",
    "name": "Shigeki Suwa",
    "url": "https://ztrehagem.dev/"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.dts.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ignore-path=.gitignore .",
    "lint:prettier": "prettier --ignore-path=.gitignore --check .",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint --ignore-path=.gitignore --fix .",
    "fix:prettier": "prettier --ignore-path=.gitignore --check --write .",
    "prepack": "run-s build"
  },
  "main": "dist/vue-modal.cjs.js",
  "module": "dist/vue-modal.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-modal.es.js",
      "require": "./dist/vue-modal.cjs.js"
    },
    "./style.css": "./dist/style.css"
  },
  "types": "./dist/types/main.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/types": "^7.17.0",
    "@types/node": "^17.0.17",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "sass": "^1.43.4",
    "typescript": "^4.5.5",
    "vite": "^2.8.1",
    "vue": "^3.2.31"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "bugs": "https://github.com/ztrehagem/vue-modal/issues",
  "homepage": "https://github.com/ztrehagem/vue-modal",
  "keywords": [
    "modal",
    "vue"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ztrehagem/vue-modal.git"
  }
}
